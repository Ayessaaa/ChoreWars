      <p class="text-slate-300 text-sm font-medium text-center">
        Edit Your Profile
      </p>

      <form
        enctype="multipart/form-data"
        method="POST"
        action="/profile/<%= member._id %>"
        class="w-fit rounded-3xl mx-auto p-px bg-gradient-to-b from-sky-500 to-sky-500/10 mt-10"
      >
        <div
          class="bg-slate-900/80 mx-auto p-5 rounded-[calc(1.5rem-1px)] w-96"
        >

        <p class="text-center font-semibold text-xl text-slate-200"><%= member.username %></p>
          <script>
            function preview() {
              pfp.src = URL.createObjectURL(event.target.files[0]);
            }
          </script>

          <img
            id="pfp"
            src="<%= member.img %>"
            alt=""
            class="rounded-full w-32 mx-auto mt-5"
          />
          <div class="mx-auto flex items-center justify-center mt-5">
            <input
              onchange="preview()"
              class="transition-all file:mr-2 text-sm file:active:bg-blue-500/20 file:bg-blue-500/10 file:border file:border-blue-500/50 file:rounded-lg file:cursor-pointer file:text-blue-500/60 absolute mt-3 font-semibold text-blue-500/80 group"
              title="profile"
              type="file"
              name="image"
              accept="image/png, image/jpeg"
            />
          </div>

          <div class="flex flex-col px-5 mt-8">
            
            

            <label
              for="fullname"
              class="text-sm font-normal text-sky-500/80 mt-2"
              >Name</label
            >
            <input
              type="fullname"
              name="fullname"
              id="fullname"
              value="<%= member.fullname %>"
              placeholder="Full Name"
              class="bg-sky-500/10 border-sky-500/50 border px-3 py-1 rounded-md placeholder:text-sky-400/50 focus:bg-sky-500/20 active:bg-sky-500/30 text-sky-50 outline-0 focus:ring-2 focus:ring-sky-500/20"
            />

            <div class="w-fit mx-auto mb-2">
              <button
                type="submit"
                class="hover:bg-sky-600/80 transition-all active:bg-sky-500/50 active:text-sky-500 bg-sky-600/70 hover:scale-105 px-5 py-1 text-xl text-white font-semibold rounded-lg mt-10 hover:shadow-lg hover:shadow-sky-500/20"
              >
                Edit
              </button>
            </div>
          </div>
        </div>
      </form>
